<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Production</servlet-name>
        <servlet-class>com.bookstore.productionserver.Production</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Consumer1</servlet-name>
        <servlet-class>com.bookstore.consumer1.Consumer1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Consumer2</servlet-name>
        <servlet-class>com.bookstore.consumer2.Consumer2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Production</servlet-name>
        <url-pattern>/Production</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Consumer1</servlet-name>
        <url-pattern>/Consumer1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Consumer2</servlet-name>
        <url-pattern>/Consumer2</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
